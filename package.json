{
    "name": "gia-workspace",
    "version": "1.0.0",
    "private": true,
    "packageManager": "npm@10.9.3",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "dev": "turbo run dev",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "clean": "turbo run clean && rm -rf node_modules",
        "reset-dev": "powershell -Command \"Remove-Item -Force -Recurse apps/studio/.next, apps/viewer/.next -ErrorAction SilentlyContinue; Write-Host 'Dev caches cleared'\""
    },
    "devDependencies": {
        "turbo": "^2.3.3"
    }
}